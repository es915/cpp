#define _CRT_SECURE_NO_WARNINGS
#include <iostream>
#include <stdio.h>

using namespace std;

// cpp 의 데이터와 함수 엮기
class Person {
public: // 접근 제어자
	int age;
	char name[20];

	// 초기화 함수 - 생성자(constructor) -> 구조체가 만들어질때 실행
	// 생성자만의 규칙
	// 1. class명과 이름이 같다
	// 2. return 타입이 없다 int, void 등등 없음
	Person(int age, const char* name) { // 구조체가 만들어질때마다 생성자가 실행됨
		cout << "사람이 태어남" << endl; 
		this->age = age;
		strcpy(this->name, name);
	}
	

	void introduce() {
		cout << name << ", " << age << endl;
	}
};

int main() {

	// cpp 에서 초기화 방법

	// 객체 초기화는 균일 초기화 권장 -> int a = {20};
	Person p1{ 18, "홍길동" }; // class 로 만들어짐 -> 객체
	Person p2{ 19, "홍길순" }; // c언어 : 데이터 만 가지고 있다
										   // cpp : 함수도 포함하고있다
	p1.introduce();
	p2.introduce();

}
