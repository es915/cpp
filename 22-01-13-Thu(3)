#define _CRT_SECURE_NO_WARNINGS
#include <iostream>
#include <stdio.h>

using namespace std;

// 캡슐화
class Test {
private :
	int divisor = 2;
public:
	void  devide(int num) {
		cout << num / divisor << endl;
	}

	void setDivisor(int num) {
		if (num == 0) {
			cout << "0은 사용할수 없음" << endl;
			return;
		}

		divisor = num;
	}
};


int main() {

	Test t1;

	t1.devide(30);

	t1.setDivisor(10);

	t1.devide(100);

	return 0;
}
