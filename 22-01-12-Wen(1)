#include <iostream>

using namespace std;

void swap(int& num1, int& num2) {
	int tmp = num1;
	num1 = num2;
	num2 = tmp;
}

void introduce(Person p) {
	cout << p.name << ", " << p.age << endl;
}

int main() {

	int arr[] = { 1,2,3,4,5,6 };

	// 범위 기반 반복문
	for (int tmp : arr) {
		if (tmp % 2 == 0) {
			cout << tmp << endl;
		}
	}


	int a = 100;
	int b = 200;

	int& r1 = a;
	int& r2 = b;

	cout << r1 << endl; // 출력 : 100
	cout << r2 << endl; // 출력 : 200

	for (int& i : arr) {
		i++;
		cout << i << " ";
	}

	cout << "" << endl;

	a = 10;
	b = 20;

	swap(a, b); //여기 swap 호출

	cout << a << endl; // 출력 : 20
	cout << b << endl; // 출력 : 10

	cout << "\n===변수 초기화 방법===" << endl;
	// C
	int n = 100;
	// Cpp
	int m = 200; // 복사 초기화
	int f(200); // 직접 초기화
	int g{ 300 }; // 균일 초기화
	

	cout << n << endl;
	cout << m << endl;
	cout << f << endl;
	cout << g << endl;
}
