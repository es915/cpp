#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <stdlib.h>
#include <iostream>

using namespace std;

// 포인터
void change1(int* num1, int* num2) {
    int tmp = *num1;
    *num1 = *num2;
    *num2 = tmp;
}
 
// 참조
void change2(int& num1, int& num2) {
    int tmp = num1;
    num1 = num2;
    num2 = tmp;
}

int main() {

    int a = 10;
    int* ptr = &a; // 포인터 변수

    int b = 20;

    ptr = &b; // a의 주소를 끊고 b의 주소를 가르킴
    
    int ia = a;
    int& ra = a; // 참조 변수

    cout << a << endl; 
    cout << ra << endl; // a 주소의 값을 가르킴 == a의 값과 같음
    cout << ia << endl; // a의 값을 복사

    a=100;
    
    cout << a << endl; // 100
    cout << ra << endl; // 100
    cout << ia << endl; // 10

    ra = b; // 맨 처음 참조한 대상을 변경할수 없음

    // ra는 a를 참조하기에 ra를 바꾸면 a 또한 바뀜
    cout << a << endl; // 20
    cout << ra << endl; // 20

    a=10;
    b=30;

    // 참조변수를 이용한 함수
    change2(a, b);

    cout << a << endl;
    cout << b << endl;

    
    return 0;
}
