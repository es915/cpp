#include <iostream>

using namespace std;

class Person {
private:
	int age;
	string name;

public:
	// 올바른 초기화 방법
	Person(int age, string name) :
		age(age),
		name(name) // 변수 설정만 이렇게 하면 됨
	{

	}

	// 같은 이름을 가져도 매개변수가 다르면 동일 사용 가능 -> 함수 오버로딩
	Person() {}

	void setInfo(int age, string name) {
		this->age = age;
		this->name = name;
	}

	void getInfo() {
		cout << age << "," << name << endl;
	}

};

class MyClass {
private:
	const int con;
	int& refer;
public: 
	MyClass(int no, int& refer) :
		con(no),
		refer(refer)
	{
	}
};

int main() {
	
	int k = 10;
	MyClass mc{ 10, k };

	Person p1{ 10, "홍길동" };
	p1.getInfo();
	p1.setInfo(20, "임꺽정");
	p1.getInfo();

	Person p2;
	p2.setInfo(30, "홍길동");
	p2.getInfo();

	return 0;
}
