void test() {
	cout << "테스트" << endl;
}

int main() {

	Person* p1 = new Person(); // 클래스 초기화 함수 (생성자)
	Person* p2 = new Person(); // 클래스 초기화 함수 (생성자)

	cout << p1->age << endl;
	cout << p1->name << endl;
	p1->introduce();

	// Person * p1 = personInit(10, "홍길동");
	// Person * p2 = personInit(20, "임꺾정");


	// 함수 포인터
	void (*ptest)() = test;

	// 함수는 괄호 () 붙이면 호출한다는 뜻
	ptest();

